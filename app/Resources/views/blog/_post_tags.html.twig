{% if not post.tags.empty %}
    <p class="post-tags">
        {% for tag in post.tags %}
            <a href="{{ path('blog_index_tag', { tagSlug: tag.id })}}">
            <span class="label label-default">
                <i class="fa fa-tag"></i> {{ tag.name }}
            </span>
            </a>
        {% endfor %}
    </p>
{% endif %}
